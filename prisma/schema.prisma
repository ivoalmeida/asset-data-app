// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Company {
  id     Int     @id @default(autoincrement())
  assets Asset[]
}

model Asset {
  id        Int     @id @default(autoincrement())
  address   String
  latitude  Float
  longitude Float
  company   Company @relation(fields: [companyId], references: [id])
  companyId Int
}
